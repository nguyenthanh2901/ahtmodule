<?xml version="1.0"?>

<page layout="1column"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="product.info.details">
            <block class="Magento\Framework\View\Element\Template" name="question.tab" as="question_tab" template="AHT_Question::product/question.phtml" group="detailed_info">
                <arguments>
                    <argument translate="true" name="title" xsi:type="string">Question - Answer</argument>
                    <argument name="sort_order" xsi:type="string">00</argument>
                </arguments>
                <block class="AHT\Question\Block\Product\View\ListQuestion" name="question.list" as="question.list" template="AHT_Question::product/list.phtml" ifconfig="question_pending/question/is_enabled" cacheable="false"/>
                <block class="Magento\Theme\Block\Html\Pager" name="product_question_list.toolbar" ifconfig="question_pending/question/is_enabled"/>
                <block class="AHT\Question\Block\Product\View\FormQuestion" name="question.form" as="question.form" template="AHT_Question::product/question_form.phtml" ifconfig="question_pending/question/is_enabled" cacheable="false" />
            </block>
        </referenceBlock>
    </body>
</page>
